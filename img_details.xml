<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txt_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_info"
                android:layout_marginTop="10dp"
                android:text="Labels:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_label_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_labels"
                android:layout_marginTop="10dp"
                android:text="Hi hello" />

            <TextView
                android:id="@+id/texts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_label_results"
                android:layout_marginTop="10dp"
                android:text="Texts:"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_texts_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/texts"
                android:layout_marginTop="10dp"
                android:text="hey" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>